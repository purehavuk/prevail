<theme>

<formatVersion>7</formatVersion>

    <view name="system, gamecarousel">
                
        <text name="system-info-systemname" extra="static">
            <text>IBM/PC COMPATIBLE</text>
            <fontPath>./assets/fonts/Oswald-Bold.ttf</fontPath>
            <alignment>left</alignment>
            <fontSize>0.03</fontSize>
            <forceUppercase>1</forceUppercase>
            <origin>0 1</origin>
            <pos>0.1 .75</pos>
            <color>ffffff</color>
        </text>

        <text name="system-info-manufacturer" extra="static">
            <text>Various Manufacturer's</text>
            <fontPath>./assets/fonts/Oswald-Bold.ttf</fontPath>
            <alignment>left</alignment>
            <fontSize>0.022</fontSize>
            <forceUppercase>1</forceUppercase>
            <origin>0 1</origin>
            <pos>0.1 .72</pos>
            <color>55ffff</color>
        </text>
    
    </view>

</theme>