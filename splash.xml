<theme>

<formatVersion>7</formatVersion>


    <view name="splash">
		
        <splash name="splash">
			<backgroundColor>000000</backgroundColor>
		</splash>

		<image name="background">
			<path>./assets/images/splash/background.png</path>
			<minSize>1 1</minSize>
			<zIndex>1</zIndex>
		</image>

		<image name="progressbar">
			<origin>0 0</origin>
			<pos>0.35 0.969</pos>
			<size>0.3 0.02</size>
			<color>00000000</color>
			<colorEnd>00000000</colorEnd>
			<roundCorners>0</roundCorners>
		</image>
		
		<image name="progressbar:active">
			<tile>true</tile>
			<color>ff5555</color>
			<colorEnd>ff5555</colorEnd>
			<zIndex>20</zIndex>
		</image>

        <image name="splashlogo" extra="true">
			<path>./assets/images/splash/logo.svg</path>
			<size>1 1</size>
			<pos>0 0</pos>
		</image>

        <text name="label">
            <fontPath>./assets/fonts/Oswald-Bold.ttf</fontPath>
            <fontSize>0.025</fontSize>
            <forceUppercase>1</forceUppercase>
			<color>FFFFFFFF</color>
			<alignment>center</alignment>\
            <origin>0.5 0.5</origin>
			<pos>0.5 0.95</pos>
            <zIndex>100</zIndex>
		</text>

	</view>

</theme>