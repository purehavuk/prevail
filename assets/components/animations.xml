<theme>

<formatVersion>7</formatVersion>

    <view name="system, gamecarousel">

        <control name="md_video">
            
            <storyboard event="activateNext">
                <animation property="offsetY" from="1" to="0" duration="480" mode="EaseInCubic"/>
            </storyboard>
            
            <storyboard event="activatePrev">
                <animation property="offsetY" from="-1" to="0" duration="480" mode="EaseInCubic"/>
            </storyboard>
            
        </control>

        <control name="logo">

            <storyboard>
                <animation property="opacity" from="0" to="1" duration="800" mode="easeIn"/>
            </storyboard>

        </control>

        <control name="md_developer, md_manual, md_players, md_releasedate, md_savestate">

            <storyboard event="activate">
                <animation property="opacity" from="0" to="1" duration="240" mode="easeIn"/>
            </storyboard>

            <storyboard event="deactivate">
                <animation property="opacity" from="1" to="0" duration="240" mode="easeOut"/>
            </storyboard>

        </control>

        <control name="md_genre">

            <storyboard event="activate">
                <animation property="opacity" from="0" to="0" duration="360" mode="easeIn"/>
                <animation property="opacity" from="0" to="1" begin="360" duration="480" mode="easeIn"/>
            </storyboard>

            <storyboard event="deactivate">
                <animation property="opacity" from="1" to="0" duration="120" mode="easeOut"/>
            </storyboard>

        </control>

        <control name="md_description">

            <storyboard event="activate">
                <animation property="opacity" from="0" to="0" duration="420" mode="easeIn"/>
                <animation property="opacity" from="0" to="1" begin="420" duration="480" mode="easeIn"/>
            </storyboard>

            <storyboard event="deactivate">
                <animation property="opacity" from="1" to="0" duration="60" mode="easeOut"/>
            </storyboard>

        </control>

        <control name="md_rating">

            <storyboard event="activate">
                <animation property="opacity" from="0" to="1" duration="240" mode="easeIn"/>
            </storyboard>

        </control>

        <control name="md_rating">

            <storyboard event="deactivate">
                <animation property="opacity" from="1" to="0" duration="240" mode="easeIn"/>
            </storyboard>

        </control>

        <control name="md_name">

            <storyboard event="activate">
                <animation property="offsetY" from="0.1" to="0" duration="480" mode="bump"/>
                <animation property="opacity" from="0" to="1" duration="300" mode="easeIn"/>
            </storyboard>

            <storyboard event="deactivate">
                <animation property="opacity" from="1" to="0" duration="120" mode="easeOut"/>
                <animation property="offsetY" from="0" to="0." duration="120" mode="bump"/>
            </storyboard>

        </control>

        <control name="md_publisher">

            <storyboard event="activate">
                <animation property="opacity" from="0" to="0" duration="240" mode="linear"/>
                <animation property="offsetY" from=".05" to="0" begin="240" duration="300" mode="bump"/>
                <animation property="opacity" from="0" to="1" duration="600" mode="easeIn"/>
            </storyboard>

            <storyboard event="deactivate">
                <animation property="opacity" from="1" to="0" duration="60" mode="easeOut"/>
            </storyboard>

        </control>

        <control name="md_thumbnail">

            <storyboard event="activateNext">
                <animation property="opacity" from="0" to="0" duration="60" mode="linear"/>
                <animation property="offsetY" from="0.0625" to="0" duration="280" mode="easeIn"/>
                <animation property="opacity" from="0" to="1" begin="60" duration="240" mode="easeIn"/>
                <animation property="scale" from="0.5" to="1" duration="240" mode="easeOut"/>
            </storyboard>

            <storyboard event="deactivateNext">
                <animation property="scale" from="1" to="0.65" duration="120" mode="easeIn"/>
                <animation property="opacity" from="1" to="0" duration="480" mode="easeOut"/>
            </storyboard>

            <storyboard event="activatePrev">
                <animation property="opacity" from="0" to="0" duration="60" mode="linear"/>
                <animation property="offsetY" from="-0.0625" to="0" duration="280" mode="easeIn"/>
                <animation property="opacity" from="0" to="1" begin="60" duration="240" mode="easeIn"/>
                <animation property="scale" from="0.5" to="1" duration="240" mode="easeOut"/>
            </storyboard>

            <storyboard event="deactivatePrev">
                <animation property="scale" from="1" to="0" duration="120" mode="easeIn"/>
                <animation property="opacity" from="1" to="0" duration="480" mode="easeOut"/>
            </storyboard>

        </control>

        <control name="md_favorite">

            <storyboard event="activate">
                <animation property="opacity" from="0" to="0" duration="240" mode="easeIn"/>
                <animation property="opacity" from="0" to="1" begin="160" duration="300" mode="easeIn"/>
                <animation property="scale" from="0" to="1"  begin="240" duration="300" mode="bump"/>
            </storyboard>

        <storyboard event="deactivate">
                <animation property="opacity" from="1" to="0" duration="60" mode="easeIn"/>
            </storyboard>

        </control>

        <control name="color-band">
            
            <storyboard>
                <animation property="offsetY" from="-.5" to="1.5" duration="6000" mode="linear" repeat="forever"/>
                <animation property="opacity" from=".075" to="0" duration="6000" mode="linear" autoReverse="true" repeat="forever"/>
                <animation property="scale" from="2" to="1" begin="0" duration="6000" mode="linear" autoReverse="true" repeat="forever"/>
            </storyboard>
        
        </control>

        <control name="redBlur">

            <storyboard>
                <animation property="opacity" from="1" to="0" duration="380" mode="EaseOut"/>
                <animation property="scale" from="1.5" to=".7" duration="480" mode="EaseIn"/>
                <animation property="offsetX" from="1.5" to="0" duration="500" mode="easeOut"/>
            </storyboard>

        </control>

        <control name="blueBlur">

            <storyboard>
                <animation property="opacity" from="1" to="0" duration="380" mode="EaseOut"/>
                <animation property="scale" from="1.5" to=".7" duration="480" mode="EaseIn"/>
                <animation property="offsetX" from="-1.5" to="0" duration="500" mode="easeOut"/>
            </storyboard>

        </control>

        <control name="prev-next-arrows-l">

            <storyboard>
                <animation property="opacity" from="0" to="1" duration="1080" repeat="forever" mode="easeOut"/>
                <animation property="scale" from=".96" to="1" duration="1080" repeat="forever" mode="easeOut"/>
            </storyboard>

        </control>

        <control name="prev-next-arrows-r">

            <storyboard>
                <animation property="opacity" from="0" to="1" duration="1080" repeat="forever" mode="easeOut"/>
                <animation property="scale" from=".96" to="1" duration="1080" repeat="forever" mode="easeOut"/>
            </storyboard>

        </control>

                <control name="prev-next-arrows-l2">

            <storyboard>
                <animation property="opacity" from="0" to=".5" duration="1080" repeat="forever" mode="easeOut"/>
                <animation property="scale" from=".92" to="1" duration="1080" repeat="forever" mode="easeOut"/>
            </storyboard>

        </control>

        <control name="prev-next-arrows-r2">

            <storyboard>
                <animation property="opacity" from="0" to=".5" duration="1080" repeat="forever" mode="easeOut"/>
                <animation property="scale" from=".92" to="1" duration="1080" repeat="forever" mode="easeOut"/>
            </storyboard>

        </control>

        <control name="prev-next-arrows-l3">

            <storyboard>
                <animation property="opacity" from="0" to=".25" duration="1080" repeat="forever" mode="easeOut"/>
                <animation property="scale" from=".88" to="1" duration="1080" repeat="forever" mode="easeOut"/>
            </storyboard>

        </control>

        <control name="prev-next-arrows-r3">

            <storyboard>
                <animation property="opacity" from="0" to=".25" duration="1080" repeat="forever" mode="easeOut"/>
                <animation property="scale" from=".88" to="1" duration="1080" repeat="forever" mode="easeOut"/>
            </storyboard>

        </control>

    </view>

</theme>