<theme>

<formatVersion>7</formatVersion>

    <view name="system, gamecarousel">

        <helpsystem name="help" extra="static">
            <textColor>ffffff</textColor>
            <iconColor>55ffff</iconColor>
            <origin>0.5 1</origin>
            <pos>0.5 0.9885</pos>
            <fontPath>./assets/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.021</fontSize>
            <color>050505</color>
            <iconA>./assets/buttons/gamepad/button-east.svg</iconA>
            <iconB>./assets/buttons/gamepad/button-south.svg</iconB>
            <iconX>./assets/buttons/gamepad/button-north.svg</iconX>
            <iconY>./assets/buttons/gamepad/button-west.svg</iconY>
        </helpsystem>

    </view>

    <view name="screen">

        <text name="clock" extra="true">
            <fontPath>./assets/fonts/Roboto-Light.ttf</fontPath>
            <fontSize>0.02</fontSize>
            <size>.05</size>
            <pos>0.5 0</pos>
            <origin>0.5 0</origin>
            <color>ffffff</color>
            <alignment>right</alignment>
        </text>

        <controllerActivity name="controllerActivity">
            <imagePath>./assets/images/icons/gamepad.svg</imagePath>
            <size>.035 0.035</size>
            <maxSize>0.035 0.035</maxSize>
            <alignment>right</alignment>
            <itemSpacing>0.0025</itemSpacing>
            <pos>0.0025 -.0025</pos>
            <color>55ffff</color>
            <activityColor>ff00ff</activityColor>
            <hotkeyColor>ffff55</hotkeyColor>
        </controllerActivity>

    <!--<text name="cheevosUser" extra="true">
