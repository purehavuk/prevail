<theme>

<formatVersion>7</formatVersion>

    <view name="system">
        
        <image name="extra-info-labels" extra="static">
            <path>./assets/images/system/extra_info.svg</path>
            <tile>false</tile>
            <origin>0.5 0.5</origin>
            <pos>0.5 0.5</pos>
            <minSize>1 1</minSize>
            <maxSize>1 1</maxSize>
            <zIndex>75</zIndex>
        </image>

        <image name="extra-info-separator" extra="static">
            <path>./assets/images/system/extra_info_separator.svg</path>
            <tile>false</tile>
            <origin>0.5 0.5</origin>
            <pos>0.5 0.5</pos>
            <minSize>1 1</minSize>
            <maxSize>1 1</maxSize>
            <color>ff5555</color>
            <zIndex>75</zIndex>
        </image>

        <text name="system-info-fav" extra="static">
            <text>
            {binding:favorites}
            </text>
            <fontPath>./assets/fonts/Oswald-Bold.ttf</fontPath>
            <alignment>right</alignment>
            <fontSize>0.015</fontSize>
            <forceUppercase>1</forceUppercase>
            <origin>1 0</origin>
            <pos>0.9725 0.0616</pos>
            <color>ff00ff</color>
            <zIndex>65</zIndex>
        </text>

        <text name="system-info-gp" extra="static">
            <text>
            {binding:gamesPlayed}
            </text>
            <fontPath>./assets/fonts/Oswald-Bold.ttf</fontPath>
            <alignment>right</alignment>
            <fontSize>0.015</fontSize>
            <forceUppercase>1</forceUppercase>
            <origin>1 0</origin>
            <pos>0.9725 0.1065</pos>
            <color>ff00ff</color>
            <zIndex>65</zIndex>
        </text>

        <text name="system-info-lp" extra="static">
            <text>
            {binding:lastPlayedDate}
            </text>
            <fontPath>./assets/fonts/Oswald-Bold.ttf</fontPath>
            <alignment>right</alignment>
            <fontSize>0.015</fontSize>
            <forceUppercase>1</forceUppercase>
            <origin>1 0</origin>
            <pos>0.9725 0.1505</pos>
            <color>ff00ff</color>
            <zIndex>65</zIndex>
        </text>

    </view>

</theme>