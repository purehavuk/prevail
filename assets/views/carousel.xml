<?xml version="1.0" encoding="UTF-8"?>

<theme>

<formatVersion>7</formatVersion>

    <view name="gamecarousel">

        <gamecarousel name="gamecarousel">
            <defaultTransition>slide</defaultTransition>
            <type>vertical</type>
            <pos>0.0225 0</pos>
            <size>0.5 1.215</size>
            <logoScale>3.5</logoScale>
            <logoSize>0.14 0.14</logoSize>
            <logoAlignment>left</logoAlignment>
            <maxLogoCount>5</maxLogoCount>
            <imageSource>marquee</imageSource>
            <zIndex>65</zIndex>
        </gamecarousel>

        <text name="gamecarouselLogoText">
            <color>ffffffff</color>
            <fontPath>./assets/fonts/Oswald-Bold.ttf</fontPath>
            <fontSize>0.0325</fontSize>
            <glowColor>00000099</glowColor>
            <glowSize>2</glowSize>
            <lineSpacing>1.0</lineSpacing>
        </text>

        <video name="md_video" extra="static">
            <origin>0.5 0.5</origin>
            <pos>0.5 0.35</pos>
            <minSize>1 1</minSize>
            <maxSize>1 1.5</maxSize>
            <delay>0</delay>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>true</showSnapshotDelay>
            <linearSmooth>true</linearSmooth>
            <loops>10</loops>
            <zIndex>-90</zIndex>
        </video>

    </view>

</theme>